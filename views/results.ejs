<h2 class="text-center">Search Results</h2>


<div class="well">
    
    <% hits.forEach(function(hit) { %>
        <a href="/favorites/<%= hit.recipe.label %>/edit"></a>

    <h2><%= hit.recipe.label %></h2>
    <p><%= hit.recipe.dietLabels %></p>
    <p>Number of Servings: <%= hit.recipe.yield %></p>
    <p>Calories: <%= Math.floor(hit.recipe.calories) %></p>

    <form method="POST" action="/favorites">
        <input hidden type="text" name="title" value="<%= hit.recipe.label %>">
        <img src="<%= hit.recipe.image %>"><br>
        <button class="btn btn-primary" type="submit"><i class="fas fa-utensils"></i> Add to Favorites</button>
        <button class="btn btn-primary" type="submit"><a id="recipe" href="<%= hit.recipe.url %>">Recipe</button>
    </form>
    
    <% }); %>
    </div>
